    <script>
        let selectedFilm = null;
        
        function selectFilm(card, filmType) {
            // Tüm kartlardan seçilmiş sınıfını kaldır
            document.querySelectorAll('.film-card').forEach(c => {
                c.classList.remove('selected');
            });
            
            // Seçilen karta sınıf ekle
            card.classList.add('selected');
            selectedFilm = filmType;
            
            // Form alanlarını doldur
            if (filmType === 'minecraft') {
                document.getElementById('filmAdi').value = 'Bir Minecraft Filmi (A Minecraft Movie) (2025)';
                document.getElementById('filmURL').value = 'https://www.fullhdfilmizlesene.tv/film/bir-minecraft-filmi-a-minecraft-movie/';
                document.getElementById('grup').value = 'Filmler';
            } else if (filmType === 'thunderbolts') {
                document.getElementById('filmAdi').value = 'Thunderbolts (2024)';
                document.getElementById('filmURL').value = 'https://www.fullhdfilmizlesene.tv/film/thunderbolts-2/';
                document.getElementById('grup').value = 'Filmler';
            } else if (filmType === 'amateur') {
                document.getElementById('filmAdi').value = 'The Amateur (2024)';
                document.getElementById('filmURL').value = 'https://www.fullhdfilmizlesene.tv/film/the-amateur/';
                document.getElementById('grup').value = 'Filmler';
            }
        }
        
        function m3uOlustur() {
            // Form değerlerini al
            const filmAdi = document.getElementById('filmAdi').value;
            const filmURL = document.getElementById('filmURL').value;
            const logoURL = document.getElementById('logoURL').value;
            const grup = document.getElementById('grup').value;
            
            // Doğrulama
            if (!filmAdi || !filmURL) {
                alert('Lütfen en azından Film Adı ve Film URL\'si alanlarını doldurun.');
                return;
            }
            
            // M3U formatında satır oluştur
            let m3uSatiri = `#EXTINF:-1 tvg-id="" tvg-name="${filmAdi}" tvg-logo="${logoURL}" group-title="${grup}",${filmAdi}\n`;
            m3uSatiri += `${filmURL}`;
            
            // Sonucu göster
            document.getElementById('m3uCikti').textContent = m3uSatiri;
            document.getElementById('sonuc').style.display = 'block';
            
            // Sonuca doğru kaydır
            document.getElementById('sonuc').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
